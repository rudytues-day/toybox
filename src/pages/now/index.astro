---
import { getCollection } from 'astro:content';
interface Props { date: Date }

const nows = await getCollection("nows")

// Sort by latest and take the first.
const mostRecent = nows.sort((a : any, b : any) => b.data.date.valueOf() - a.data.date.valueOf())[0];
const recentUrl = `${ Astro.site?.origin }/now/${ mostRecent?.id }`;
---
<head>
    <meta http-equiv="refresh" content={ `0; url=${ recentUrl }` } />
</head>